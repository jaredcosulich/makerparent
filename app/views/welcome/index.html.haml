.jumbotron.tight
  .container
    .buffer Project & activity ideas for parents & teachers from parents & teachers.
    = link_to raw('Explore &raquo;'), projects_path, class: 'btn btn-primary btn-lg'
    = link_to raw('Contribute &raquo;'), new_project_path, class: 'btn btn-success btn-lg'

.ages.centered.text-centered
  %h4.title-font.age-group 
    Find projects for specific ages: 
    .btn-group
      %button.btn.btn-default.age-selection{type: 'button', data: {toggle: 'dropdown'}}
        1 Year Old
      %button.btn.btn-default.dropdown-toggle{type: 'button', data: {toggle: 'dropdown'}}
        %span.caret            
      
      %ul.age-dropdown.dropdown-menu{role: 'menu', aria: {labelledby: 'age-dropdown'}}
        - (1..15).each do |i|
          %li{class: ('active' if i == 1)}
            %a= "#{pluralize(i, 'year')} old"
        %li
          %a 16+ years old
    
    %a.btn.btn-success.search{type: 'button', data: {path: projects_path}} Go &raquo;


.container
  .project_lists.row
    .col-md-4
      = link_to raw('<h5>Recent</h5>'), projects_path(sort: 'recent'), class: 'header'
      - @recent.each do |project| 
        = render partial: "projects/preview", locals: {project: project}
      %br
      %p.text-centered
        = link_to raw('Recent Projects &raquo;'), projects_path(sort: 'recent'), class: 'btn btn-default'  
        
    .col-md-4
      = link_to raw('<h5>Popular</h5>'), projects_path(sort: 'popular'), class: 'header'
      - @popular.each do |project| 
        = render partial: "projects/preview", locals: {project: project}
      %br
      %p.text-centered
        = link_to raw('Popular Projects &raquo;'), projects_path(sort: 'popular'), class: 'btn btn-default'  

    .col-md-4
      = link_to raw('<h5>Simple</h5>'), projects_path(sort: 'simple'), class: 'header'
      - @simple.each do |project| 
        = render partial: "projects/preview", locals: {project: project}        
      %br
      %p.text-centered
        = link_to raw('Simple Projects &raquo;'), projects_path(sort: 'simple'), class: 'btn btn-default'  
        